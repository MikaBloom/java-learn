package cap11;

public class SemMemoria {

	public static void main(String[] args) {

		java.util.ArrayList<Integer> lista = new java.util.ArrayList<Integer>();
		
		System.out.println("Mem贸ria Livre Inicial: " + Runtime.getRuntime().freeMemory());
		System.out.println("Mem贸ria Total: " + Runtime.getRuntime().totalMemory());
		while (true) {
			try {
				lista.add(33);
				
			} catch (OutOfMemoryError e) {
				// lista = null;				
				System.out.println("Mem贸ria cheia!");
				System.out.println("Mem贸ria Livre Final: " + Runtime.getRuntime().freeMemory());
				break;
			}			
		}
		

	}
}
